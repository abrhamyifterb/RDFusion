{
	"compilerOptions": {
		"target": "ESNext",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": ["es2022"],
		"module": "ESNext",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"types": ["node", "node-fetch"] ,
		"skipLibCheck": true, 
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
